{% if flash.getMessage('errors') %}
	<div class="row">
		<div class="col-xs-12">
			<div class="alert alert-danger alert-dismissible">
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		        <h4><i class="icon fa fa-ban"></i>Error</h4>
				{{ flash.getMessage('errors') | first }}
			</div>
		</div>
	</div>
{% endif %}

{% if flash.getMessage('success') %}
	<div class="row">
		<div class="col-xs-12">
			<div class="alert alert-success alert-dismissible">
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		        <h4><i class="icon fa fa-check"></i>Success!</h4>
				{{ flash.getMessage('success') | first}}
			</div>
		</div>
	</div>
{% endif %}

{% if flash.getMessage('info') %}
	<div class="row">
		<div class="col-xs-12">
			<div class="alert alert-info alert-dismissible">
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		        <h4><i class="icon fa fa-info"></i>Info!</h4>
				{{ flash.getMessage('info') | first | raw }}
			</div>
		</div>
	</div>
{% endif %}

{% if flash.getMessage('warning') %}
	<div class="row">
		<div class="col-xs-12">
			<div class="alert alert-warning alert-dismissible">
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		        <h4><i class="icon fa fa-warning"></i>Warning!</h4>
				{{ flash.getMessage('warning') | first }}
			</div>
		</div>
	</div>
{% endif %}