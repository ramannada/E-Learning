{% extends 'user/templates/template.twig' %}

{% block content %}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path_for('web.home') }}"><b>Admin</b>LTE</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to Account</p>
            {% include 'templates/flash/flash.twig' %}
            <form action="" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Username" name="username">
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                </div>
            </form>
            <a href="{{ path_for('web.user.register') }}" class="text-center">Register a new membership</a>
            <a class="pull-right" href="#" class="text-center">Forgot Password</a>
        </div>
    </div>
</body>
{% endblock %}

{% block script %}
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
{% endblock %}
