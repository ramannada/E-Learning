{% extends 'template.twig' %}

{% block title %}E-Learning - Reset Password{% endblock %}

{% block body %}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path_for('web.home') }}"><b>E</b>-Learning</a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">New Password</p>
            {% include 'templates/flash/flash.twig' %}
            <form action="" method="post">
                <div class="form-group has-feedback {{ errors.password ? 'has-error': '' }}">
                    <input type="password" class="form-control" placeholder="New Password" name="password">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        {% if errors.password %}
                            <span class="help-block">{{ errors.password | first }}</span>
                        {% endif %}
                </div>
                <div class="form-group has-feedback {{ errors.retype_password ? 'has-error': '' }}">
                    <input type="password" class="form-control" placeholder="Retype password" name="retype_password">
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        {% if errors.retype_password %}
                            <span class="help-block">{{ errors.retype_password | first }}</span>
                        {% endif %}
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
{% endblock %}